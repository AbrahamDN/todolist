<%- include("partials/header") -%>

<div class="wrapper" id="customList">
  <div id="wrap">

    <div id="heading">

      <div class="toggle" id="menu-toggle" onclick="menuToggle()">
        <i class="fal fa-bars"></i>
      </div>
      <div>
        <h1><%= listTitle %></h1>
      </div>
      <div class="toggle" id="crt_list-toggle" onclick="listToggle()">
        <i class="fal fa-plus"></i>
      </div>

    </div>

    <div id="container">

      <%- include("partials/toggles") -%>
      <div id="lists">

        <%  newListItems.forEach(function(item){ %>

          <form action="/delete" method="post">
            <div class="item">
              <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
              <p><%=item.name%></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
          </form>
        <%  }) %>

      </div>

  </div>

  <div id="bottom">

    <form class="submit_frm" action="/" method="post">
      <label class="flex_lbl">
        <input type="text" name="newItem" placeholder="New Item" autofocus autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </label>
    </form>

  </div>
</div>

<script src="js/script.js"></script>

<%- include("partials/footer") -%>
