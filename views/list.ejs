<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>

    <div class="extras_toggle" onclick="extras_toggle()">
      <i class="fal fa-ellipsis-v" style="font-size: 35px;"></i>
    </div>
    <div id="extras">
      <div class="extras_container box">
        <div class="header">
          <b>List(s)</b>
        </div>
        <li><a href="/">Default</a></li>
        <% lists.forEach(function(list){ %>
          <li><a href="<%= list.name %>"><%= list.name %> </a></li>
        <% }); %>

      </div>
    </div>


    <div id="newList">
      <div class="newList_wrap">

        <div class="newList_toggle">
          <button onclick="newList_toggle()">+</button>
        </div>

        <div id="newList_form">
          <form class="newList" action="/customList" method="post">
            <input type="text" name="customList" placeholder="Create a new list" maxlength="20">
            <button type="submit">+</button>
          </form>
        </div>

      </div>
    </div>

  </div>



  <div class="box">


  <%  newListItems.forEach(function(item){ %>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
        <p><%=item.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
  <%  }) %>


      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autofocus autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<script src="/js/script.js"></script>

<%- include("footer") -%>
